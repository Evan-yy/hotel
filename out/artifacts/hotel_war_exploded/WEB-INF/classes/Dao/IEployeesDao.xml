<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Dao.IEmployeesDao">
    <resultMap type="domain.employees" id="EmployeesMap">
        <id column="login_id" property="Lid"/>
        <result column="passwd" property="pwd"/>
        <result column="sex" property="sex"/>
        <result column="number" property="number"/>
    </resultMap>

    <!--配置查询所有-->
    <select id="findAll" resultMap="EmployeesMap">
        select * from employees;
    </select>

    <select id="find" resultMap="EmployeesMap">
        select * from employees where login_id= #{Lid} AND passwd = #{pwd}
    </select>

    <select id="findID" resultMap="EmployeesMap">
        select * from employees where login_id = #{id}
    </select>


</mapper>
        <!--映射文件-->